@model GestorAlquilerVehiculos.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-body px-5 py-4">
            <h2 class="mb-4 text-center text-danger fw-bold">¿Estás seguro de eliminar este usuario?</h2>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-end fw-semibold">Nombre completo:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>

                <dt class="col-sm-4 text-end fw-semibold">Correo electrónico:</dt>
                <dd class="col-sm-8">@Model.CorreoElectronico</dd>

                <dt class="col-sm-4 text-end fw-semibold">Rol:</dt>
                <dd class="col-sm-8">@Model.Rol</dd>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.UsuarioID" method="post" id="deleteForm">
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Cancelar</a>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete()">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete() {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Esta acción no se puede deshacer.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}