@model GestorAlquilerVehiculos.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Crear Nuevo Usuario</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- VALIDACIÓN COMPLETA -->
            <form asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm needs-validation" novalidate>
                <!-- MOSTRAR ERRORES EN GENERAL -->
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="NombreCompleto" class="form-label">Nombre completo</label>
                    <input asp-for="NombreCompleto" class="form-control" required />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CorreoElectronico" class="form-label">Correo electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" required />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContrasenaHash" class="form-label">Contraseña</label>
                    <input asp-for="ContrasenaHash" type="password" class="form-control" required />
                    <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label">Rol</label>
                    <select asp-for="Rol" class="form-select" required>
                        <option value="">Seleccione un rol</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Empleado">Empleado</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Guardar Usuario</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- ✅ SweetAlert2 para mostrar mensaje de éxito -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- ✅ jQuery necesario para validaciones -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Validaciones unobtrusive de ASP.NET Core -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- ✅ Mostrar SweetAlert si se creó con éxito -->
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            Swal.fire({
                icon: 'success',
                title: '¡Usuario creado!',
                text: 'El usuario se registró correctamente.',
                confirmButtonColor: '#198754'
            });
        }
    </script>
}