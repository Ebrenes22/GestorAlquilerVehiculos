@model GestorAlquilerVehiculos.Models.EntregaDevolucion

@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Registrar Entrega/Devolución</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ReservaID" class="form-label">Reserva del Cliente</label>
                <select asp-for="ReservaID" class="form-control" asp-items="ViewBag.Reservas">
                    <option value="">-- Seleccione Reserva --</option>
                </select>
                <span asp-validation-for="ReservaID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoInicial" class="form-label"></label>
                <input asp-for="EstadoInicial" class="form-control" />
                <span asp-validation-for="EstadoInicial" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoFinal" class="form-label"></label>
                <input asp-for="EstadoFinal" class="form-control" />
                <span asp-validation-for="EstadoFinal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CargosAdicionales" class="form-label"></label>
                <input asp-for="CargosAdicionales" class="form-control" />
                <span asp-validation-for="CargosAdicionales" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaEntrega" class="form-label"></label>
                <input asp-for="FechaEntrega" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDevolucion" class="form-label"></label>
                <input asp-for="FechaDevolucion" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-link">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
