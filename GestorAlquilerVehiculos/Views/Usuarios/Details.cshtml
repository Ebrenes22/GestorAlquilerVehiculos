@model GestorAlquilerVehiculos.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-body px-5 py-4">
            <h2 class="mb-4 text-center text-dark fw-bold">Detalles del Usuario</h2>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-end fw-semibold">Nombre completo:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>

                <dt class="col-sm-4 text-end fw-semibold">Correo electrónico:</dt>
                <dd class="col-sm-8">@Model.CorreoElectronico</dd>

                <dt class="col-sm-4 text-end fw-semibold">Rol:</dt>
                <dd class="col-sm-8">@Model.Rol</dd>

                <dt class="col-sm-4 text-end fw-semibold">Fecha de Registro:</dt>
                <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.UsuarioID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Volver
                </a>
            </div>
        </div>
    </div>
</div>