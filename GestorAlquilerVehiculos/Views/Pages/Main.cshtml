@model GestorAlquilerVehiculos.Models.DashboardViewModel

@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Bienvenido al Panel de Administración</h1>
        <p class="lead">Aquí puedes gestionar reservas, entregas, reportes y más.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x mb-2 text-primary"></i>
                    <h2>@Model.ReservasCount</h2>
                    <p class="mb-0">Total de Reservas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-car fa-3x mb-2 text-success"></i>
                    <h2>@Model.VehiculosCount</h2>
                    <p class="mb-0">Total de Vehículos</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tools fa-3x mb-2 text-warning"></i>
                    <h2>@Model.MantenimientosCount</h2>
                    <p class="mb-0">Total de Mantenimientos</p>
                </div>
            </div>
        </div>
    </div>
</div>
