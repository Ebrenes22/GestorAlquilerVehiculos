@model IEnumerable<GestorAlquilerVehiculos.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark fw-bold mb-0">Gestión de Vehiculos</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus text-white"></i> Crear Vehiculo
    </a>
</div>
<table class="table table-bordered table-hover align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                Año
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioPorDia)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioPorDia)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.VehiculoID" class="btn btn-sm btn-warning me-1">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.VehiculoID" class="btn btn-sm btn-info text-white me-1">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>