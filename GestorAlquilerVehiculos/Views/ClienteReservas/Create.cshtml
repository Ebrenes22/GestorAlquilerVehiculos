@model GestorAlquilerVehiculos.Models.ClienteReserva

@{
    ViewData["Title"] = "Registrar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:100px;"></div>
<h2 class="text-center mb-4">Registrar Cliente para Reserva</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 p-4 bg-white rounded shadow-sm">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="NombreCompleto">Nombre completo</label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Identificacion">Identificación</label>
                    <input asp-for="Identificacion" class="form-control" />
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CorreoElectronico">Correo electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Direccion">Dirección</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Siguiente</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary px-4 ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}